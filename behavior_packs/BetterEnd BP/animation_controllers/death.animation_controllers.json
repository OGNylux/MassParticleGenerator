{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.death": {
            "initial_state": "alive",
            "states": {
                "alive": {
                    "transitions": [
                        {
                            "dead": "!query.is_alive"
                        }
                    ],
                    "on_exit": [
                        "/fill ~ ~-1 ~ ~ ~-1 ~ dirt 0 replace air 0",
                        "/fill ~ ~-1 ~ ~ ~-1 ~ dirt 0 replace lava 0",
                        "/summon pb:grave_stone ~ ~ ~"
                    ]
                },
                "dead": {
                    "transitions": [
                        {
                            "alive": "query.is_alive"
                        }
                    ]
                }
            }
        }
    }
}