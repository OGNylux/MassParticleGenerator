{
    "namespace": "soul_ui",
    "root": {
        "size": [
            "90%",
            "90%"
        ],
        "type": "input_panel",
        "controls": [
            {
                "dialog_image@soul_ui.dialog_image": {
                    "layer": 0
                }
            },
            {
                "dialog_panel@soul_ui.dialog_panel": {}
            }
        ],
        "button_mappings": [
            {
                "from_button_id": "button.menu_cancel",
                "to_button_id": "button.exit_student",
                "mapping_type": "global"
            },
            {
                "from_button_id": "button.controller_start",
                "to_button_id": "button.exit_student",
                "mapping_type": "global"
            }
        ]
    },
    "dialog_image": {
        "type": "image",
        "fill": false,
        "keep_ratio": false,
        "bilinear": true,
        "$fit_to_width": false,
        "anchor_from": "center",
        "anchor_to": "center",
        "size": [
            "100%",
            "100%"
        ],
        "texture": "textures/dialog"
    },
    "dialog_panel": {
        "anchor_from": "center",
        "anchor_to": "center",
        "offset": [
            0,
            "8%"
        ],
        "size": [
            "80%",
            "65%"
        ],
        "type": "panel",
        "controls": [
            {
                "table@soul_ui.table": {
                    "layer": 2
                }
            }
        ]
    },
    "grid_item": {
        "anchor_from": "top_middle",
        "anchor_to": "top_middle",
        "size": [
            "100%",
            "30%"
        ],
        "bindings": [
            {
                "binding_name": "#visible"
            },
            {
                "binding_name": "#student_button_visible",
                "binding_type": "collection",
                "binding_name_override": "#visible",
                "binding_collection_name": "student_buttons_collection"
            }
        ],
        "type": "panel",
        "controls": [
            {
                "button@common.button": {
                    "$pressed_button_name": "button.student_button",
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "student_buttons_collection",
                            "binding_collection_prefix": "student_buttons"
                        }
                    ],
                    "controls": [
                        {
                            "default@soul_ui.grid_image": {}
                        },
                        {
                            "hover@soul_ui.grid_image": {}
                        },
                        {
                            "pressed@soul_ui.grid_image": {}
                        }
                    ]
                }
            },
            {
                "label": {
                    "anchor_from": "center",
                    "layer": 3,
                    "anchor_to": "center",
                    "type": "label",
                    "text": "#student_button_text",
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "student_buttons_collection",
                            "binding_collection_prefix": "student_buttons"
                        },
                        {
                            "binding_name": "#student_button_text",
                            "binding_type": "collection",
                            "binding_collection_name": "student_buttons_collection"
                        }
                    ]
                }
            }
        ]
    },
    "grid_image": {
        "type": "image",
        "fill": false,
        "keep_ratio": false,
        "bilinear": true,
        "$fit_to_width": false,
        "size": [
            "100%",
            "100%"
        ],
        "anchor_from": "center",
        "anchor_to": "center",
        "texture": "textures/button"
    },
    "pad": {
        "anchor_from": "top_middle",
        "anchor_to": "top_middle",
        "type": "panel",
        "size": [
            "100%",
            "5%"
        ]
    },
    "table@soul_controls.table": {
        "controls": [
            {
                "c1@soul_controls.table_column": {
                    "collection_name": "student_buttons_collection",
                    "controls": [
                        {
                            "first@soul_ui.grid_item": {
                                "collection_index": 0
                            }
                        },
                        {
                            "pad@soul_ui.pad": {}
                        },
                        {
                            "third@soul_ui.grid_item": {
                                "collection_index": 2
                            }
                        },
                        {
                            "pad@soul_ui.pad": {}
                        },
                        {
                            "fifth@soul_ui.grid_item": {
                                "collection_index": 4
                            }
                        }
                    ]
                }
            },
            {
                "separator@soul_controls.table_column": {
                    "size": [
                        "25%",
                        "100%"
                    ]
                }
            },
            {
                "c2@soul_controls.table_column": {
                    "collection_name": "student_buttons_collection",
                    "controls": [
                        {
                            "second@soul_ui.grid_item": {
                                "collection_index": 1
                            }
                        },
                        {
                            "pad@soul_ui.pad": {}
                        },
                        {
                            "fourth@soul_ui.grid_item": {
                                "collection_index": 3
                            }
                        },
                        {
                            "pad@soul_ui.pad": {}
                        },
                        {
                            "sixth@soul_ui.grid_item": {
                                "collection_index": 5
                            }
                        }
                    ]
                }
            }
        ]
    }
}