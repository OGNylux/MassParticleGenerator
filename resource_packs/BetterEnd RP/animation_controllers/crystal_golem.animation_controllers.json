{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.crystal_golem": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": ["idle"],
                    "transitions": [
                        {
                            "walk": "q.ground_speed >= 0.7"
                        },
                        {
                            "attack": "query.skin_id == 1"
                        }
                    ],
                    "blend_transition": 0.2
                },
                "walk": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "idle": "q.ground_speed < 0.7"
                        },
                        {
                            "attack": "query.skin_id == 1"
                        }
                    ],
                    "blend_transition": 0.2
                },
                "attack": {
                    "animations": [
                        "attack"
                    ],
                    "transitions": [
                        {
                            "idle": "query.any_animation_finished && query.skin_id != 1"
                        }
                    ],
                    "blend_transition": 0.2
                }
            }
        }
    }
}