{
	"format_version": "1.16.100",
	"minecraft:entity": {
		"description": {
			"identifier": "pb:grave_stone",
			"is_summonable": true,
			"scripts": {
				"animate": [
					"grave_stone"
				]
			},
			"animations": {
				"grave_stone": "controller.animation.grave_stone"
			}
		},
		"component_groups": {
			"pb:restart":{
				"minecraft:mark_variant": {
					"value": 0
				}
			},
			"pb:gather_items": {
				"minecraft:mark_variant": {
					"value": 1
				},
				"minecraft:timer": {
					"looping": false,
					"time": [
						5,
						5
					],
					"time_down_event": {
						"event": "pb:stop_gather",
						"target": "self"
					}
				},
				"minecraft:item_hopper": {},
				"minecraft:tick_world": {
					"radius": 2
				}
			},
			"pb:get_items": {
				"minecraft:mark_variant": {
					"value": 2
				}
			}
		},
		"components": {
			"minecraft:interact": {
				"interactions": [
					{
						"on_interact": {
							"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									}
								]
							},
							"event": "pb:get_items"
						},
						"interact_text": "Get Items"
					}
				]
			},
			"minecraft:nameable": {
				"always_show": true
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"deals_damage": false
					}
				]
			},
			"minecraft:inventory": {
				"inventory_size": 54,
				"can_be_siphoned_from": false,
				"container_type": "horse"
			},
			"minecraft:physics": {
				"has_gravity": true,
				"has_collision": true
			},
			"minecraft:collision_box": {
				"width": 1,
				"height": 1
			},
			"minecraft:persistent": {}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"pb:gather_items"
					]
				}
			},
			"pb:stop_gather": {
				"remove": {
					"component_groups": [
						"pb:gather_items"
					]
				}
			},
			"pb:get_items": {
				"add": {
					"component_groups": [
						"pb:get_items"
					]
				}
			}
		}
	}
}