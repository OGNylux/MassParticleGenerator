{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.mobs.sit": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "transitions": [{
                            "sit": "query.is_sitting"
                        }
                    ],
                    "blend_transition": 0.2
                },
                "sit": {
                    "animations": ["sit"],
                    "transitions": [{
                            "idle": "!query.is_sitting"
                        }
                    ],
                    "blend_transition": 0.2
                }
            }
        }
	}
}
