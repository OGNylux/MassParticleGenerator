{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "pb:pillar",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    "place_altar",
                    "pillar_destroy"
                ]
            },
            "animations": {
                "place_altar": "controller.animation.place_altar",
                "pillar_destroy": "controller.animation.pillar_destroy"
            }
        },
        "component_groups": {
            "pb:place": {
                "minecraft:skin_id": {
                    "value": 0
                }
            },
            "pb:animate": {
                "minecraft:skin_id": {
                    "value": 1
                }
            },
            "pb:destory": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": false
                },
                "minecraft:mark_variant": {
                    "value": 1
                }
            }
        },
        "components": {
            "minecraft:nameable": {
                "allow_name_tag_renaming": true,
                "always_show": false
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "deals_damage": false,
                        "on_damage": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    }
                                ]
                            },
                            "event": "pb:destroy"
                        }
                    },
                    {
                        "deals_damage": false,
                        "on_damage": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "player"
                                    }
                                ]
                            },
                            "event": "pb:animate"
                        }
                    },
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:fire_immune": {},
            "minecraft:collision_box": {
                "width": 0.7,
                "height": 1
            },
            "minecraft:scale": {
                "value": 1.0
            },
            "minecraft:knockback_resistance": {
                "value": 1.0
            },
            "minecraft:push_through": {
                "value": 1.0
            },
            "minecraft:health": {
                "value": 50,
                "max": 50
            },
            "minecraft:physics": {}
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "pb:place"
                    ]
                }
            },
            "pb:animate": {
                "add": {
                    "component_groups": [
                        "pb:animate"
                    ]
                }
            },
            "pb:destroy": {
                "add": {
                    "component_groups": [
                        "pb:destory"
                    ]
                }
            }
        }
    }
}