{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.slime.walk": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "transitions": [
            {
              "walk": "q.ground_speed >= 0.1"
            }
          ],
          "blend_transition": 0.2
        },
        "walk": {
          "animations": [
            "walk"
          ],
          "transitions": [
            {
              "idle": "q.ground_speed < 0.1 && q.all_animations_finished"
            }
          ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.mobs.walk": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "transitions": [
            {
              "walk": "q.ground_speed >= 0.7"
            }
          ],
          "blend_transition": 0.2
        },
        "walk": {
          "animations": [
            "walk"
          ],
          "transitions": [
            {
              "idle": "q.ground_speed < 0.7"
            }
          ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.mobs.walk_idle": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {
              "walk": "q.ground_speed >= 0.7"
            }
          ],
          "blend_transition": 0.2
        },
        "walk": {
          "animations": [
            "walk"
          ],
          "transitions": [
            {
              "idle": "q.ground_speed < 0.7"
            }
          ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.mobs.attack": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "transitions": [
            {
              "attack": "v.attack_time>0"
            }
          ]
        },
        "attack": {
          "animations": [
            "attack"
          ],
          "transitions": [
            {
              "idle": "v.attack_time==0||q.all_animations_finished"
            }
          ]
        }
      }
    }
  }
}