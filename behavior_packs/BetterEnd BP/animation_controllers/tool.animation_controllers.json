{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tools": {
      "states": {
        "default": {
          "transitions": [
            {
              "parachute": "query.is_using_item == 1 && query.is_item_name_any == 'parachute' && query.is_on_ground != 1"
            }
          ]
        },
        "parachute": {
          "transitions": [
            {
              "default": "query.is_using_item != 1 && query.is_on_ground == 1"
            }
          ],
          "on_entry": ["/function parachute"],
          "on_exit": ["/function parachute_off"]
        }
      }
    }
  }
}
