{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sleeping_bag": {
      "states": {
        "default": {
          "transitions": [
            {
              "sleeping_bag": "query.mark_variant == 1"
            }
          ]
        },
        "sleeping_bag": {
          "transitions": [
            {
              "default": "query.mark_variant == 0"
            }
          ],
          "on_entry": [
            "/time set 1000",
            "/event entity @e[type=pb:sleeping_bag] pb:reset"
          ],
          "on_exit": [
            
          ]
        }
      }
    }
  }
}